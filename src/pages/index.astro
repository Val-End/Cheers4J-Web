---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Cheers4J">
	<h1>Cheers4J</h1>
	<p>
		<strong>Minecraft</strong> mod that adds <strong>Twitch</strong> cheers integration.
		<br>To get started, put your Twitch username below.
	</p>
	<input type="text" id="user-input" placeholder="..." minlength="4">
</Layout>

<script>
	const input = document.getElementById("user-input") as HTMLInputElement;

	input.addEventListener("keydown", (event) => {
		if(event.key === "Enter") {
			if(input.value.length < input.minLength)
				return;

			location.replace("/redirect?state=" + input.value)
		}
	});
</script>

<style>
	input {
		width: 100%;
		height: 3rem;
		background-color: rgb(11, 11, 11);
		border: 2px solid rgba(77, 77, 77, 0.4);
		font-size: 1.5rem;
		color: white;
		border-radius: 10px;
		opacity: 0.4;
		outline: none;
		transition: opacity 0.5s ease;
	}

	input:hover {
		opacity: 1;
	}

	input:focus {
		opacity: 1;
	}
</style>
